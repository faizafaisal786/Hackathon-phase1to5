# Database Configuration
DATABASE_URL=sqlite:///./data/todo.db
# For PostgreSQL: postgresql://postgres:postgres@db:5432/hackathon_todo

# JWT Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME=Hackathon Todo API
DEBUG=False

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# PostgreSQL Docker Configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=hackathon_todo

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
# Inside Docker: http://backend:8000

# Node Environment
NODE_ENV=production

# ============================================================
# Kafka + Dapr Event-Driven Architecture
# ============================================================

# Dapr Configuration
DAPR_HTTP_PORT=3500
PUBSUB_NAME=taskpubsub
EVENTS_ENABLED=true

# Kafka Configuration
KAFKA_BROKERS=kafka:9092

# Reminder Service
CRON_INTERVAL_SECONDS=60
REMINDER_TOPIC=reminder-events
STATE_STORE_NAME=statestore
